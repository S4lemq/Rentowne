    <changeSet author="plubowicz" id="002-create_user_check_constraint">
        <sql splitStatements="true" endDelimiter=";">
            SELECT p_add_check_constraint('USER_ACCOUNT', 'ID');
            SELECT p_add_check_constraint('USER_ACCOUNT', 'FIRST_NAME');
            SELECT p_add_check_constraint('USER_ACCOUNT', 'EMAIL');
            SELECT p_add_check_constraint('USER_ACCOUNT', 'PASSWORD');
            SELECT p_add_check_constraint('USER_ACCOUNT', 'INSERT_DATE');
            SELECT p_add_check_constraint('USER_ACCOUNT', 'INSERT_OPERATOR');
        </sql>
    </changeSet>

</databaseChangeLog>